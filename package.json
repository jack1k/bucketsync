{
    "name": "bucketsync",
    "description": "sync to google cloud",
    "version": "1.0.0",
    "main": "public/electron.js",
    "author": "",
    "license": "ISC",
    "files": [
        "build/**/*",
        "public/electron.js",
        "public/preload.js"
    ],
    "scripts": {
        "start": "webpack serve --mode development",
        "electron-dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
        "build": "webpack --mode production",
        "electron-pack": "npm run build && electron-builder"
    },
    "dependencies": {
        "@google-cloud/storage": "^7.16.0",
        "chokidar": "^4.0.3",
        "concurrently": "^9.2.0",
        "google-auth-library": "^10.1.0",
        "googleapis": "^150.0.1",
        "open": "^10.1.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.0.2",
        "wait-on": "^8.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.27.0",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "electron": "^37.2.0",
        "electron-builder": "^26.0.12",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^9.1.0",
        "html-webpack-plugin": "^5.6.3",
        "sass": "^1.86.3",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "typescript": "^5.8.3",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.0"
    },
    "build": {
        "appId": "com.bucket.sync",
        "files": [
            "build/**",
            "public/electron.js",
            "public/preload.js"
        ],
        "extraMetadata": {
            "main": "public/electron.js"
        }
    },
    "mac": {
        "target": "dmg",
        "hardenedRuntime": false,
        "sign": false
    }
}
